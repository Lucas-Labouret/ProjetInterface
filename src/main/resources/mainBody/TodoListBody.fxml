<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1">
    <Button fx:id="add" prefHeight="20.0" prefWidth="80.0" text="Ajouter" AnchorPane.leftAnchor="140.0" AnchorPane.topAnchor="10.0" />
    <Button fx:id="collapse" layoutX="67.0" layoutY="4.0" prefHeight="20.0" prefWidth="120.0" text="Tout réduire" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0" />
    <Label fx:id="help" alignment="CENTER_RIGHT" prefHeight="20.0" prefWidth="280.0" text="Clique droit sur une tâche pour la modifier" textFill="#00000080" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="10.0" />
    <ScrollPane fx:id="scroll" fitToHeight="true" hbarPolicy="NEVER" AnchorPane.topAnchor="40.0">
        <VBox fx:id="mainBox" />
    </ScrollPane>
</AnchorPane>
